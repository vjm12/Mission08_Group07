
@{
    ViewData["Title"] = "Add/Edit Tasks";
}
@model Mission08_Group07.Models.NewTask

<h1>@ViewData["Title"]</h1>

@*Allows user to add and edit tasks*@

<div>
    <form method="post">
        <label asp-for="Task">Task Name</label>
        <input asp-for="Task" /><br /><br />
        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" /><br /><br />
        <label asp-for="QuadrantNumber">Quadrant</label>
        <select asp-for="QuadrantNumber">
            <option value="1">Quadrant 1</option>
            <option value="2">Quadrant 2</option>
            <option value="3">Quadrant 3</option>
            <option value="4">Quadrant 4</option>
        </select><br /><br />
        <!--Use existing model to populate drop-down menu-->
        <label asp-for="CategoryID">Category</label>
        <select asp-for="CategoryID">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryID">@c.CategoryName</option>
            }
        </select><br /><br />
        <label asp-for="Completed">Completed?</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select><br /><br />
        <button type="submit">Submit</button>
        <!--Enable validation for data entered-->
        <div asp-validation-summary="All"></div>
    </form>
    </div>

