@{
    ViewData["Title"] = "Quadrants";
}
@model List<NewTask>
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row noMargin">
        <div class="col-6 one quadpadding">
            <h1>Q1</h1>
            <h2>Important/Urgent</h2>
            <ul>
                @foreach (var x in Model)
                {
                    if (@x.QuadrantNumber == 1)
                    {
                        <li> @x.Task</li> 
                        <li style="list-style-type:none">@x.DueDate</li>
                        <li style="list-style-type:none">@x.Category.CategoryName</li>  
                        <li style="list-style-type:none"><a asp-controller="Home" asp-action="Edit" asp-route-taskid="@x.TaskID">Edit</a></li>
                        <li style="list-style-type:none"><a asp-controller="Home" asp-action="Delete" asp-route-taskid="@x.TaskID">Delete</a></li>
                        
                       
                    }
                    else
                    {
                        continue;
                    }
                }
            </ul>
        </div>
        <div class="col-6 two quadpadding" >
            <h1>Q2</h1>
            <h2>Important/Not Urgent</h2>
